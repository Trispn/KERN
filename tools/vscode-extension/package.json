{
    "name": "kern-language",
    "displayName": "KERN Programming Language",
    "description": "Language support for KERN (Knowledge Execution & Reasoning Notation)",
    "version": "0.1.0",
    "publisher": "KERN",
    "repository": {
        "type": "git",
        "url": "https://github.com/KERN-Language/KERN"
    },
    "icon": "icons/kern.svg",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "kern",
                "aliases": [
                    "KERN",
                    "kern"
                ],
                "extensions": [
                    ".kern",
                    ".kgraph",
                    ".kbc"
                ],
                "icon": {
                    "light": "./icons/kern.svg",
                    "dark": "./icons/kern.svg"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "kern",
                "scopeName": "source.kern",
                "path": "./syntaxes/kern.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@vscode/vsce": "^3.7.1"
    }
}